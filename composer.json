{
    "name": "jaunas/mikrotag",
    "type": "project",
    "description": "Client of wykop.pl website",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Jaunas\\Mikrotag\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Tomasz Kowalewski",
            "email": "t.kowalewski@me.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/dependency-injection": "^5.3",
        "symfony/yaml": "^5.3",
        "symfony/config": "^5.3",
        "symfony/console": "^5.3",
        "symfony/http-client": "^5.3",
        "vlucas/phpdotenv": "^5.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1",
        "squizlabs/php_codesniffer": "^3.6",
        "phpmd/phpmd": "^2.10",
        "phpstan/phpstan": "^0.12.99"
    },
    "scripts": {
        "fix": "php-cs-fixer fix src/",
        "test:phpcs": "phpcs src/",
        "test:phpmd": "phpmd src/ text ruleset",
        "test:phpstan": "phpstan analyse --level 6 src",
        "test": [
            "@test:phpcs",
            "@test:phpmd",
            "@test:phpstan"
        ]
    }
}
